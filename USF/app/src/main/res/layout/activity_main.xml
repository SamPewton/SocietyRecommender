<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    tools:context=".ui.login.LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="664dp"
        android:layout_height="967dp"
        app:srcCompat="@color/orange"
         />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="492dp"
        android:text="Take Quiz" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="385dp"
        android:text="View all socities"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="313dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="263dp"
        android:text="View all recommended"
        tools:layout_editor_relativeX="74dp"
        tools:layout_editor_relativeY="401dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Log out"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="647dp" />
</RelativeLayout>